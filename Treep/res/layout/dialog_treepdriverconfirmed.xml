<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    
    
    
    
    
    <TextView
       android:id="@+id/tvTreepDriverConfirmedTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10sp"
       android:layout_gravity="center_horizontal"
       android:text="Vous avez confirmé une réservation."
       android:gravity="center"
       android:textColor="#888888"
       android:textSize="25dp"
        android:textStyle="bold"
       />
    
     <TextView
         android:id="@+id/tvTreepDriverConfirmed"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       	 android:layout_below="@+id/tvTreepDriverConfirmedTitle"
         android:gravity="center"
         android:text="Temps restant au treeper pour vous répondre :"
         android:textColor="#000000"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20sp"
         android:textSize="25dp"
         android:textStyle="bold" />
     
     <TextView
         android:id="@+id/tvTreepDriverConfirmedCountDown"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       	 android:layout_below="@+id/tvTreepDriverConfirmed"
         android:gravity="center"
         android:textColor="#FF0000"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20sp"
         android:textSize="25dp"
         android:textStyle="bold" />

    <LinearLayout
	     android:id="@+id/refreshBigLayout"
	     android:layout_width="130sp"
	     android:layout_height="130sp"
	     android:layout_centerHorizontal="true"
       	 android:layout_below="@+id/tvTreepDriverConfirmedCountDown"
	     android:gravity="center"
	     android:background="@drawable/rounded_bg_white"
	     android:orientation="vertical" >
    	  	  
	      <Button
	        android:id="@+id/refreshBigButton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_refreshbig_selector" />
    	  	  
      </LinearLayout>

</RelativeLayout>