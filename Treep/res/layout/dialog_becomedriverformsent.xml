<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="10sp" >

	    <ImageView
	        android:id="@+id/ivCarc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_gravity="center"
	        android:layout_marginTop="10dp"
	        android:src="@drawable/bookicon"
	        android:gravity="center" />
    
    <TextView
        android:id="@+id/tvFormSentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="Nous avons bien reçu votre candidature pour devenir conducteur treep."
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="21sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvMerci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Nous vous contacterons dans les meilleurs délais.\nMerci"
        android:textColor="#666666"
        android:textSize="16sp"/>
    



        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/requesttreepbutton"
            android:text="  OK  "
	        android:layout_centerHorizontal="true"
	        android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />


</LinearLayout>