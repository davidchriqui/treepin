<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    
    <TextView
       android:id="@+id/tvBecomeDriver"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10sp"
       android:layout_gravity="center_horizontal"
       android:text="L'équipe Treep a déjà reçu vos informations pour devenir conducteur"
       android:gravity="center"
       android:textColor="#888888"
       android:textSize="22dp"
        android:textStyle="bold"
       />
    
     <TextView
         android:id="@+id/tvBecomeDriver2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       	 android:layout_below="@+id/tvBecomeDriver"
         android:gravity="center"
         android:text="Nous vous contacterons très prochainement."
         android:textColor="#000000"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20sp"
         android:textSize="18dp" />

    
    
    <Button
        android:id="@+id/confirmButton"
        android:layout_below="@id/tvBecomeDriver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:background="@drawable/requesttreepbutton"
        android:text="   OK   "
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="36sp" />

</RelativeLayout>