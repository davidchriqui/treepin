<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >
 
    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg"
        android:layout_marginRight="5dip">
 
        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center" />
 
    </LinearLayout>
 
    <!-- username-->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Firstname Lastname"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dip"
        android:textStyle="bold"/>
    
   
    <!-- carmodel -->
    <TextView
        android:id="@+id/carmodel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:textColor="#343434"
        android:textSize="12dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Fiat 500" />
    
    
    
    <!-- distancetime -->
    <TextView
        android:id="@+id/distancetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textSize="16dip"
        android:textStyle="bold|italic"
        android:layout_marginTop="1dip"
        android:layout_below="@+id/carmodel"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Réservation à l'avance" />
    
    
            <!-- price -->
    <TextView
        android:id="@+id/treepresponseprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#47b132"
        android:textSize="20dip"
        android:textStyle="bold"
        android:layout_marginLeft="20dip"
        android:layout_below="@+id/carmodel"
        android:layout_alignParentRight="true"
        android:text="20 €" />
    
    
 
    <!-- Rightend list_rating -->
    <ImageView
        android:id="@+id/list_rating"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/username"
        android:gravity="right"
        android:layout_marginRight="5dip"
       	/>
     
 
     <!-- Rightend Arrow -->
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
 
</RelativeLayout>