<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    
    <TextView
       android:id="@+id/tvIceBreakerTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10sp"
       android:layout_gravity="center_horizontal"
       android:text="Faites plus ample connaissances avec votre conducteur"
       android:gravity="center"
       android:textColor="#ff0000"
       android:textSize="20dp"
        android:textStyle="bold"
       />
    
     <TextView
         android:id="@+id/tvIceBreaker"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
       	 android:layout_below="@+id/tvIceBreakerTitle"
         android:gravity="center"
         android:textColor="#000000"
	     android:layout_marginLeft="5sp"
	     android:layout_marginRight="5sp"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="20sp"
         android:textSize="22dp"
         android:textStyle="bold" />

    <Button
        android:id="@+id/pushButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIceBreaker"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10sp"
        android:background="@drawable/icebreakerbutton"
        android:gravity="center" />

</RelativeLayout>