<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/splashscreenbg" >
  
    <ImageView
        android:id="@+id/splashscreenlogo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"
        android:src="@drawable/logosplash" />
    
    <ImageView 
		android:id="@+id/pintreepin" 
		android:layout_height="200dp" 
		android:src="@drawable/pintreepin"
		android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/splashscreenlogo"
		android:layout_width="wrap_content"
		android:layout_centerVertical="true" />

	
    <Button
        android:id="@+id/buttonLoginLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/fbconnectbutton"
         />
    
    <LinearLayout
	    android:id="@+id/refreshLayout" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
	    android:background="@drawable/rounded_bg_white">
    
	    <ImageView 
		android:id="@+id/ivRefresh"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:src="@drawable/ic_refreshbig"
		android:layout_centerInParent="true" />
    
    </LinearLayout>
    
  
    
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:orientation="vertical" >
         
    	    <TextView
	        android:id="@+id/fbwarning"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:text="@string/fbwarning"
	        android:textColor="#ffffff"
	        android:shadowColor="#000000"
	        android:shadowDx="3"
	        android:shadowDy="3"
	        android:shadowRadius="0.01"
	        android:textSize="18sp" />
    	    
	    	   
		
			    
		    <LinearLayout
		        android:id="@+id/cguLayout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentBottom="true"
        		android:layout_centerHorizontal="true"
        		android:layout_gravity="center_horizontal"
		        android:orientation="horizontal" >
 
			<Button  
				android:id="@+id/cgubutton"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center_horizontal"
				android:text="@string/cgu"
				android:background="#0000"
				android:textColor="@color/splashtextbutton" />
			
			<TextView
				android:id="@+id/tiret"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/fbconnect"
				android:layout_gravity="center_horizontal"
				android:textColor="#ffffff"
				android:text="  -  " />
			    
			  <Button  
			    android:id="@+id/helpbutton"
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_gravity="center_horizontal"
			    android:text="@string/help"
			    android:background="#0000"
				android:textColor="@color/splashtextbutton" />
			
			
			</LinearLayout>
			
	    </LinearLayout>


	    
</RelativeLayout>
