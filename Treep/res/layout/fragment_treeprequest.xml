<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:background="#EFEFEF" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal"
	    android:background="#EFEFEF" >
		   
		    <TextView
				    android:id="@+id/tvInfobanner"
				    android:background="@drawable/infobanner_bg_green"
				    android:layout_width="match_parent"
				    android:gravity="center"
				    android:layout_height="wrap_content"
				    android:textSize="18sp"
				    android:textColor="#000000"
				    android:text="Temps restant : 20 sec" />
		  
		    
		     <LinearLayout
			   android:id="@+id/userProfileLayout"
			   android:layout_width="match_parent"
			   android:layout_height="wrap_content"
			   android:layout_centerHorizontal="true"
			   android:background="@drawable/profilebg"
		       android:orientation="vertical"
			   >
					    <TextView
					        android:id="@+id/tvUsername"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="User N."
					        android:layout_marginTop="8sp"
					        android:layout_marginLeft="10sp"
					        android:textColor="#ffffff"
					        android:textSize="23dp"/>
					    
				         <LinearLayout
						   android:layout_width="wrap_content"
						   android:layout_height="wrap_content"
						   android:layout_centerHorizontal="true"
					        android:layout_marginLeft="10sp"
					       android:orientation="horizontal"
						   >
						   
				             <ImageView
						        android:layout_width="20dp"
						        android:layout_height="20dp"
						        android:src="@drawable/briefcase"
						   		android:layout_centerVertical="true"/>
					         <TextView
						        android:id="@+id/tvPositionCompany"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_marginLeft="10sp"
						        android:text="Consultant chez SFR"
						        android:textColor="#ffffff"
						        android:textSize="16dp"
						   		android:layout_centerVertical="true" />
				         </LinearLayout>
				         
				         <LinearLayout
						   android:id="@+id/userProfileLayout"
						   android:layout_width="wrap_content"
						   android:layout_height="wrap_content"
					        android:layout_marginLeft="10sp"
						   android:layout_centerHorizontal="true"
					       android:orientation="horizontal"
						   >
					         <ImageView
						        android:layout_width="20dp"
						        android:layout_height="20dp"
						        android:src="@drawable/schoolicon"
						   		android:layout_centerVertical="true"/>
					         <TextView
						        android:id="@+id/tvSchool"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_marginLeft="10sp"
						        android:text="Ecole Nationale Supérieure de l'Electronique et de ses Applications"
						        android:textColor="#ffffff"
						        android:textSize="13dp" />
				         </LinearLayout>
				         
				         <RelativeLayout
						   android:id="@+id/userProfileLayout"
						   android:layout_width="match_parent"
						   android:layout_height="wrap_content"
						   android:layout_centerHorizontal="true"
						   android:background="#DDDDDD"
						   android:layout_marginTop="10dp"
						   android:layout_marginLeft="10dp"
						   android:layout_marginRight="10dp"  >
					         
				             
				           <ImageView
						        android:id="@+id/ivUserProfilePicture"
						        android:layout_width="100sp"
						        android:layout_height="100sp"
						        android:layout_marginLeft="8sp"
						        android:layout_marginTop="8sp"
						        android:layout_gravity="center"
						        android:src="@drawable/nopicture" />
				           
				           <ImageView
						        android:id="@+id/ivUserRating"
						        android:layout_width="100dp"
						        android:layout_height="20sp"
						        android:layout_alignParentRight="true"
						        android:layout_marginTop="8sp"
						        android:layout_marginRight="5sp"
						        android:layout_marginLeft="5sp"
						        android:src="@drawable/rating5"/>
				           
				           <LinearLayout
						   android:id="@+id/linkedinLayout"
						   android:layout_width="wrap_content"
						   android:layout_height="wrap_content"
						   android:layout_marginTop="2sp"
				    	   android:layout_marginLeft="5sp"
						   android:layout_toRightOf="@id/ivUserProfilePicture"
						   android:layout_below="@id/ivUserRating"
						   android:orientation="horizontal"
						   >
		
				    		<ImageView
				    		    android:id="@+id/ivLinkedIn"
				    		    android:layout_width="30dp"
				    		    android:layout_height="30dp"
				    		    android:layout_marginBottom="10sp"
				    		    android:src="@drawable/linkedin" />
					    	
					    	<TextView
						        android:id="@+id/tvLinkedInConnections"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_marginLeft="3sp"
					      		android:layout_gravity="center_vertical"
						        android:text="500+ Connections"
						        android:textColor="#000000"
						        android:textSize="15dp"
						        android:padding="5dp" />
				    	</LinearLayout>
				    	
				           <LinearLayout
						      android:id="@+id/priceLayout"
						      android:layout_width="wrap_content"
						      android:layout_height="wrap_content"
							  android:padding="5dp"
				    	      android:layout_marginLeft="5sp"
							  android:layout_toRightOf="@id/ivUserProfilePicture"
						      android:layout_below="@id/linkedinLayout"
						      android:background="@drawable/dotted_frame"
						      android:orientation="horizontal" >
						 	    
						 	    <ImageView
						 	        android:layout_width="35dp"
						 	        android:layout_height="35dp"
						 	        android:layout_gravity="center_vertical"
						 	        android:layout_marginRight="5sp"
						 	        android:src="@drawable/moneyicon" />
						 	    
						 	    <TextView
								    android:id="@+id/tvprice"
								   	android:layout_width="wrap_content"
								    android:layout_height="wrap_content"
								    android:textSize="16sp"
								    android:textColor="@color/corail"
								    android:singleLine="false"
								    android:text="Vous recevrez : 3.45€"
					      			android:layout_centerHorizontal="true"
					      			android:layout_gravity="center_vertical"
							        android:gravity="center"/>
				 	    
			 	    </LinearLayout>
				             
			    	</RelativeLayout>
			</LinearLayout>
			
		     
				 	<LinearLayout
				      android:layout_width="match_parent"
				      android:layout_height="wrap_content"
				      android:layout_marginTop="10dp"
					  android:layout_marginBottom="10dp"
					  android:layout_marginLeft="10dp"
					  android:layout_marginRight="10dp"
					  android:background="#FFFFFF"
				      android:orientation="vertical" >
			    
				 	     <LinearLayout
						      android:id="@+id/addressLayout"
						      android:layout_width="wrap_content"
						      android:layout_height="wrap_content"
						      android:orientation="horizontal" >
						      
					    	  <TextView
							    android:id="@+id/tvDepTitle"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="12sp"
							    android:textColor="#444444"
							    android:layout_marginLeft="5dp"
							    android:singleLine="false"
							    android:textStyle="bold"
							    android:text="Départ : " />
					    	  
					    	  <TextView
							    android:id="@+id/tvAddressDep"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="14sp"
							    android:textColor="#444444"
							    android:singleLine="false"
							    android:text="" />
				    	  </LinearLayout>
				    	  
				 	     <ImageView
			    		    android:layout_width="match_parent"
			    		    android:layout_height="0.5dp"
			    		    android:layout_marginTop="5sp"
			    		    android:layout_marginBottom="5sp"
			    		    android:background="#88888888" />
				 	     
				    	  <LinearLayout
						      android:id="@+id/addressLayout"
						      android:layout_width="wrap_content"
						      android:layout_height="wrap_content"
						      android:orientation="horizontal" >
					    	  <TextView
							    android:id="@+id/tvDestTitle"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="12sp"
							    android:layout_marginLeft="5dp"
							    android:textColor="#444444"
							    android:singleLine="true"
							    android:textStyle="bold"
							    android:text="Destination : " />
					    	  
					    	  <TextView
							    android:id="@+id/tvAddressDest"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="14sp"
							    android:textColor="#444444"
							    android:singleLine="false"
							    android:text="" />
				    	  </LinearLayout>
				    	  
				    	  
				    	  <ImageView
			    		    android:layout_width="match_parent"
			    		    android:layout_height="4dp"
			    		    android:layout_marginTop="5sp"
			    		    android:layout_marginBottom="5sp"
			    		    android:background="#EFEFEF" />
				    	  
				    	  <LinearLayout
						      android:id="@+id/detourLayout"
						      android:layout_width="wrap_content"
						      android:layout_height="wrap_content"
						      android:orientation="horizontal" >
				      
					    	  <TextView
							    android:id="@+id/tvDetourTitle"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="12sp"
							    android:layout_marginLeft="5dp"
						  		android:layout_marginRight="5dp"
							    android:textColor="#444444"
							    android:singleLine="true"
							    android:textStyle="bold"
							    android:text="Détour :" />
					    	  
					    	  <TextView
							    android:id="@+id/tvDetour"
							   	android:layout_width="wrap_content"
							    android:layout_height="wrap_content"
							    android:textSize="14sp"
							    android:layout_marginLeft="10dp"
								android:layout_marginRight="10dp"
								android:textColor="@color/corail"
							    android:singleLine="false"
							    android:text=""/>
					    	  
					    	    
					    	  
				    	  </LinearLayout>
				    
				    	  
				    	  
				    	  
			      </LinearLayout>
		     
		     
		     <Button
	            android:id="@+id/buttonItinerary"
	            android:layout_width="170dp"
	            android:layout_height="35dp"
	            android:layout_alignParentBottom="true"
	            android:background="@drawable/buttonitinerary"
	            android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:layout_marginBottom="2dp"
		        android:layout_centerHorizontal="true"
		        android:layout_gravity="center"/>
		     
		   <LinearLayout
		       android:id="@+id/buttonLayout"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_alignParentBottom="true"
		       android:layout_gravity="center_horizontal"
		       android:layout_marginBottom="5dp"
		       android:gravity="center"
		       android:layout_marginTop="5sp"
		       android:orientation="horizontal" >

		       <LinearLayout
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_centerHorizontal="true"
			       android:layout_gravity="center_horizontal"
		       	   android:layout_marginRight="15dp"
			       android:orientation="vertical" >
				    
				    <Button
			            android:id="@+id/buttonRefuse"
			            android:layout_width="90dp"
			            android:layout_height="90dp"
			            android:layout_marginBottom="5dp"
			            android:layout_marginTop="10dp"
			            android:background="@drawable/cross"
				        android:layout_centerHorizontal="true"
				        android:layout_gravity="center"/>
				    
				    <TextView
					   	android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:textSize="14sp"
						android:textColor="#CCCCCC"
				        android:layout_gravity="center_horizontal"
					    android:text="Refuser"/>
			    </LinearLayout>
				  
		       <LinearLayout
			       android:layout_width="wrap_content"
			       android:layout_height="wrap_content"
			       android:layout_centerHorizontal="true"
			       android:layout_gravity="center_horizontal"
		           android:layout_marginLeft="15dp"
			       android:orientation="vertical" >
				    
		       
		       		<Button
			            android:id="@+id/buttonAccept"
			            android:layout_width="90dp"
			            android:layout_height="90dp"
			            android:layout_marginBottom="5dp"
			            android:layout_marginTop="10dp"
			            android:background="@drawable/checkbox"
				        android:layout_centerHorizontal="true"
				        android:layout_gravity="center"/>  
				        
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:gravity="center"
				        android:text="Accepter"
				        android:textColor="#CCCCCC"
				        android:textSize="14sp" />

			    </LinearLayout>
			</LinearLayout>
	</LinearLayout>
</ScrollView>