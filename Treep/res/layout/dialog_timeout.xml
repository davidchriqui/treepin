<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    
    <TextView
        android:id="@+id/tvTimeoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="Problème de connexion"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="22sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/tvTimeout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Voulez-vous réessayer ?"
        android:textColor="#666666"
        android:textSize="20sp"/>
    



    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
	    android:orientation="horizontal" >
    
        <Button
            android:id="@+id/okButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_yes"
            android:text="  Oui  "
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_no"
            android:text="  Non  "
            android:textColor="@color/corail"
            android:textSize="26sp"
            android:textStyle="bold" />

        </LinearLayout>
</LinearLayout>