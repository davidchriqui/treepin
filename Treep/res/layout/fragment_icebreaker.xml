<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical"
    android:background="#ff2c11">

    
    <TextView
       android:id="@+id/tvIceBreakerTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="10sp"
       android:layout_gravity="center_horizontal"
       android:text="Faites plus ample connaissances avec votre conducteur"
       android:gravity="center"
       android:textColor="#444444"
       android:textSize="23dp"
        android:textStyle="bold"
       />
    
     <TextView
         android:id="@+id/tvIceBreaker"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_marginLeft="5sp"
         android:layout_marginRight="5sp"
         android:layout_marginTop="20sp"
         android:gravity="center"
         android:text="Appuyez sur le bouton PUSH pour briser la glace !"
         android:textColor="#ffffff"
         android:textSize="25dp"
         android:textStyle="bold" />

    <Button
        android:id="@+id/pushButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10sp"
        android:background="@drawable/icebreakerbutton"
        android:gravity="center" />

</RelativeLayout>